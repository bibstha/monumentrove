= form_for [@monument, @picture], :html => { :multipart => true } do |f|

  - if @picture.errors.any?
    
    #error_explanation
      %h2
        = "#{pluralize(@picture.errors.count, "error")} prohibited this picture from being saved:"
      
      - @picture.errors.full_messages.each do |message|
        %li
          = message

  .field
    = f.label      :name
    = f.text_field :name

  .field
    = f.label      :description
    = f.text_area  :description

  .field
    = f.label      :date
    = f.text_field :date

  - if @picture.new_record?
    .field
      = f.label      :image
      = f.file_field :image
  
  .actions
    = f.submit


