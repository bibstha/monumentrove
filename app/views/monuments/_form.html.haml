= form_for(@monument) do |f|

  - if @monument.errors.any?
    
    #error_explanation
      %h2
        = "#{pluralize(@monument.errors.count, "error")} prohibited this monument from being saved:"
      
      - @monument.errors.full_messages.each do |message|
        %li
          = message

  .form-group
    = f.label :collection
    = f.collection_select :collection_id, @collections, :id, :name, {}, class: "form-control"

  .form-group
    = f.label :category
    = f.collection_select :category_id, @categories, :id, :name, {}, class: "form-control"

  .form-group
    = f.label :name
    = f.text_field :name, class: "form-control"

  .form-group
    = f.label :description
    = f.text_area :description, class: "form-control"

  .actions
    = f.submit class: "btn btn-default"


