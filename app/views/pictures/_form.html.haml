= form_for [@monument, @picture], html: {class: "form-horizontal", multipart: true } do |f|

  - if @picture.errors.any?
    
    #error_explanation
      %h2
        = "#{pluralize(@picture.errors.count, "error")} prohibited this picture from being saved:"
      
      - @picture.errors.full_messages.each do |message|
        %li
          = message

  .form-group.col-md-6
    = f.label      :name, class: "col-md-3 control-label"
    .col-md-9
      = f.text_field :name, class: "form-control"

  .form-group.col-md-6
    = f.label      :date, class: "col-md-3 control-label"
    .col-md-9
      = f.text_field :date, class: "form-control"

  .row
    .form-group.col-md-6
      = f.label      :description, class: "col-md-3 control-label"
      .col-md-9
        = f.text_area  :description, class: "form-control", rows: 5

    .form-group.col-md-6
      
      - if @picture.new_record?
        .form-group
          = f.label      :image, class: "col-md-3 control-label"
          .col-md-9
            = f.file_field :image, class: "form-control"
  
      .col-md-offset-3
        = f.submit class: "btn btn-default"


